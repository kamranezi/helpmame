rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Правила для изображений объявлений. 
    // Путь: /board_images/{userId}/{imageId}
    match /board_images/{userId}/{imageId} {
      
      // Любой может читать изображения
      allow read: if true;

      // Загружать изображения могут только авторизованные пользователи.
      allow write: if request.auth != null && 
                      request.auth.uid == userId && // ID пользователя совпадает с папкой
                      request.resource.size < 5 * 1024 * 1024 && // Размер до 5MB
                      request.resource.contentType.matches('image/jpeg|image/png|image/jpg'); // Только изображения
    }
  }
}
